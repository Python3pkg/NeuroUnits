EQNSET syn_alpha {

    g' = -g/g_tau
    g2' = -g2/g_tau2

    i = (g-g2) * (v-erev)
    
    erev = -50mV
    <=> PARAMETER g_tau:s, g_tau2:s
    <=> INPUT     v: mV           METADATA {"mf":{"role":"MEMBRANEVOLTAGE"} }
    <=> OUTPUT    i:(mA)      METADATA {"mf":{"role":"TRANSMEMBRANECURRENT"} }

    gInc = 5pS
    ==>> on_event( r:S ){
        g = g + 4pS + gInc + r + [2pS]if[v<10mV]else[0pS]
        g2 = g + 4pS + gInc + r
    }
}
